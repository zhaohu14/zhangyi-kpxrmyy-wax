/* zhuyuan/fee/fee.wxss */
page {
    background-color: rgb(247, 247, 247);
    padding-bottom: 30rpx;
}
.header {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.header .headerContent {
    width: 95%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 2.5%;
}



.header  image {
    width: 40rpx;
    height: 40rpx;
    /* margin-right: 20rpx; */
}

.header  .cardImg {
    width: 70rpx;
    height: 60rpx;
}

.header .left {
    width: calc(100% - 120rpx);
}

.selectTime {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.selectTimeContent {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}

.selectTimeContent view {
    margin: auto;
}

.selectTimeContent .time {
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid #d6d5d5;
    border-radius: 80rpx;
    width: 180rpx;
    text-align: center;
}

.selectTimeContent .title {
    color: #d6d5d5;
    line-height: 100rpx;
}

.rows {
    width: 90%;
    margin-left: 5%;
    min-height: 100rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin-top: 20rpx;
    padding: 20rpx 0;
}

.rows .titles {
    width: 90%;
    margin-left: 5%;
    border-bottom: 1rpx solid #dbdbdb;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.rows .titles view:nth-child(1) {
    width: calc(100% - 150rpx);
}

.rows .titles view:nth-child(2) {
    width: 150rpx;
    font-size: 28rpx;
    text-align: center;
    background-color: #4C87FD;
    color: #fff;
    border-radius: 10rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.rows .content {
    width: 90%;
    margin-left: 5%;
}

.rows .content .children {
    width: 100%;
    display: flex;
}
.rows .content .children view {
    display: flex;
    height: 60rpx;
    align-items: center;
    font-size: 30rpx;
    /* justify-content: center; */
}
.rows .content .children view:nth-child(1) {
    width: 60%;
    color: #7e7e7e;
}
.rows .content .children view:nth-child(2) {
    width: 40%;
    justify-content: flex-end;
    color: red;
    /* text-align: right; */
}
