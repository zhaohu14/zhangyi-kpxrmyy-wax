page {
  background-color: rgb(247, 247, 248);
}
.cardInfo {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.cardInfo .name {
  width: 60%;
  margin-left: 20rpx;
  width: calc(100% - 40rpx - 180rpx - 40rpx);
}

.cardInfo .qh {
  min-width: 40rpx;
  min-height: 30rpx;
  line-height: 30rpx;
  background-color: #4C87FD;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
}

.cardInfo image {
  width: 40rpx;
  height: 40rpx;
}

.input {
  width: 95%;
  min-height: 200rpx;
  /* border: 1rpx solid #dbdbdb; */
  margin-top: 30rpx;
  margin-left: 2.5%;
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 20rpx;
  padding: 30rpx;
}
.input .inputView {
  width: 90%;
  height: 100rpx;
  margin-left: 5%;
  /* border: 1rpx solid #dbdbdb; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.input .inputView .iptview {
  width: 75%;
  /* height: 80rpx; */
  /* line-height: 80rpx; */
  border: 1rpx solid #dbdbdb;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.input .inputView .iptview input {
  height: 80rpx;
  width: 95%;
  margin-left: 2.5%;
}

.moneyList {
  width: 95%;
  min-height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 2.5%;
  border: 1rpx solid #dbdbdb;
  margin-top: 30rpx;
}

.moneyList view {
  padding: 10rpx 30rpx;
  margin: auto;
  /* background-color: #4C87FD; */
  /* color: #fff; */
  border-radius: 10rpx;
  border: 1rpx solid #dbdbdb;
}

.moneyList view.y {
  padding: 10rpx 30rpx;
  margin: auto;
  background-color: #4C87FD;
  color: #fff;
  border-radius: 10rpx;
}

.pay {
  background-color: #4C87FD;
  color: #fff;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 20rpx;
  margin-left: 10%;
  margin-top: 60rpx;
}