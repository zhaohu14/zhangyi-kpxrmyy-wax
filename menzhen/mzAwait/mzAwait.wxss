page {
    background-color: rgb(247, 247, 247);
    padding-bottom: 30rpx;
}
.header {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.header .headerContent {
    width: 95%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 2.5%;
}



.header  image {
    width: 40rpx;
    height: 40rpx;
    /* margin-right: 20rpx; */
}

.header  .cardImg {
    width: 70rpx;
    height: 60rpx;
}

.header .left {
    width: calc(100% - 120rpx);
}
.rows {
    width: 90%;
    min-height: 200rpx;
    margin-left: 5%;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 20rpx 0;
    /* padding-bottom: 20rpx; */
}