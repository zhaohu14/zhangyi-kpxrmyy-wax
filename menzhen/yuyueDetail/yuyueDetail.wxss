/* menzhen/yuyueDetail/yuyueDetail.wxss */
page {
    background-color: rgb(247, 247, 247);
    padding-top: 30rpx;
}

.yyContent {
    width: 95%;
    background: #FFFFFF;
    box-shadow: 3rpx 0rpx 8rpx 0rpx #dbdbdb;
    min-height: 400rpx;
    margin-left: 2.5%;
    border-radius: 20rpx;
    overflow: hidden;
    padding-bottom: 20rpx;
}

.yyContent .header {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    margin: 0 auto;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.yyContent .header view {
    width: 50%;
    height: 80rpx;
    font-size: 30rpx;
}

.yyContent .header view:nth-child(1) {
    text-align: left;
    color: #999999;
    width: 70%;
}

.yyContent .header view:nth-child(2) {
    text-align: right;
    color: #4C87FD;
    width: 30%;
}


.barCode {
    width: 90%;
    height: 180rpx;
    margin-left: 5%;
    margin-top: 30rpx;
}
.barCode #barCode {
    margin: 0 auto;
}
.numberView {
    width: 100%;
    text-align: center;
    margin-top: -20rpx;
}

.cellView {
    width: 90%;
    margin-left: 5%;
    margin-top: 20rpx;
}

.cellView .cell {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.cellView .cell view {
    width: 50%;
}

.cellView .cell view:nth-child(1) {
    text-align: left;
}
.cellView .cell view:nth-child(2) {
    text-align: right;
    color: #999999;
}

.btns {
    width: 80%;
    height: 100rpx;
    border-radius: 20rpx;
    margin-left: 10%;
    background-color: #4C87FD;
    color: #fff;
    margin-top: 80rpx;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 100rpx;
    text-align: center;
}