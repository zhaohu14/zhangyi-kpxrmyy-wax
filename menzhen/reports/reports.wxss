/* menzhen/reports/reports.wxss */
page {
  background-color: rgb(247, 247, 248);
}
.cardInfo {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.cardInfo .name {
  width: 60%;
  margin-left: 20rpx;
  width: calc(100% - 40rpx - 180rpx - 40rpx);
}

.cardInfo .qh {
  min-width: 40rpx;
  min-height: 30rpx;
  line-height: 30rpx;
  background-color: #4C87FD;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
}

.cardInfo image {
  width: 40rpx;
  height: 40rpx;
}

.content {
  width: 100%;
  /* margin-top: 30rpx; */
  min-height: 100rpx;
  background-color: #fff;
  padding: 20rpx 0;
}

.rows {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #dbdbdb;
}

.rows .date {
  width: 100rpx;
  height: 80rpx;
  border-right: 1rpx solid #dbdbdb;
  text-align: center;
  color: #7e7e7e;
  font-size: 28rpx;
}

.rows .center {
  width: calc(100% - 180rpx);
  padding-left: 20rpx;
}

.rows .center view {
  height: 40rpx;
  line-height: 40rpx;
  /* margin-bottom: auto; */
}
.rows .center view:nth-child(2) {
  color: red;
}

.rows .right {
  /* width: 80rpx; */
  /* height: 80rpx; */
  width: 40rpx;
  height: 40rpx;
}

.switchTypeView {
  width: 100%;
  height: 80rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #dbdbdb;
}

.switchTypeView view {
  width: 50%;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  margin: auto;
}

.switchTypeView view.y {
  background-color: #4C87FD;
  color: #fff;
}