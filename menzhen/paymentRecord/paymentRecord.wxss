/* menzhen/paymentRecord/paymentRecord.wxss */
page {
    background-color: rgb(247, 247, 247);
    padding-bottom: 30rpx;
}
.header {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.header .headerContent {
    width: 95%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 2.5%;
}



.header  image {
    width: 40rpx;
    height: 40rpx;
    /* margin-right: 20rpx; */
}

.header  .cardImg {
    width: 70rpx;
    height: 60rpx;
}

.header .left {
    width: calc(100% - 120rpx);
}

.selectTime {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgb(247, 247, 247);
}

.selectTimeContent {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}

.selectTimeContent view {
    margin: auto;
}

.selectTimeContent .time {
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid #d6d5d5;
    border-radius: 80rpx;
    width: 180rpx;
    text-align: center;
}

.selectTimeContent .title {
    color: #d6d5d5;
    line-height: 100rpx;
}

.rows {
    width: 90%;
    min-height: 200rpx;
    margin-left: 5%;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 20rpx 0;
    /* padding-bottom: 20rpx; */
}