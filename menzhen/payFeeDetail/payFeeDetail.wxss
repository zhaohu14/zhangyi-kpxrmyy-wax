page {
    background-color: rgb(247, 247, 247);
}
.header {
    width: 100%;
    min-height: 300rpx;
    background-color: #fff;
    padding: 20rpx 0;
}

.header .title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #7e7e7e;
    font-size: 32rpx;
}

.header .totalMoney {
    width: 100%;
    text-align: center;
    height: 120rpx;
    line-height: 80rpx;
    color: red;
    font-size: 40rpx;
    font-weight: 600;
}

.header .userInfoRows {
    width: 90%;
    margin-left: 5%;
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
}

.header .userInfoRows view {
    width: 50%;
}

.header .userInfoRows view:nth-child(1) {
    text-align: left;
}

.header .userInfoRows view:nth-child(2) {
    text-align: right;
}

.bottom {
    width: 100%;
    min-height: 250rpx;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 20rpx 0;
}

.bottom .title {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #4C87FD;
}

.bottom .detailRows {
    width: 95%;
    min-height: 60rpx;
    display: flex;
    margin-left: 2.5%;
    font-size: 28rpx;
}



.bottom .detailRows .rows:nth-child(1) {
    width: 40%;
}

.bottom .detailRows .rows:nth-child(2) {
    width: 20%;
}

.bottom .detailRows .rows:nth-child(3) {
    width: 20%;
}

.bottom .detailRows .rows:nth-child(4) {
    width: 20%;
}

.bottom .detailRows .rows {
    display: flex;
    justify-items: center;
    align-items: center;
}

.bottom .detailRows .rows view {
    /* min-width: 20rpx; */
    width: 100%;
    text-align: center;
}

.btns {
    width: 100%;
    /* min-height: 200rpx; */
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
}

.btns view {
    width: 70%;
    margin-left: 15%;
    height: 100rpx;
    margin-bottom: 20rpx;
    line-height: 100rpx;
    border-radius: 10rpx;
}

.btns view:nth-child(1) {
    background-color: #4C87FD;
    color: #fff;
}

.btns view:nth-child(2) {
    background-color: red;
    color: #fff;
}








