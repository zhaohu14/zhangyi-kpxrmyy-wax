/* menzhen/ksList/ksList.wxss */

page {
    background-color: rgb(247, 247, 247);
    padding-top: 20rpx;
    height: calc(100vh - 20rpx);
}
.search {
    width: 100%;
    height: 100rpx;
}

.search .headerSearch {
    width: 90%;
    height: 80rpx;
    margin-left: 5%;
    background-color: #fff;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search .headerSearch .images {
    width: 40rpx;
    height: 40rpx;
}
.search .headerSearch .images image {
    width: 100%;
    height: 100%;
}

.headerSearch input {
    width: 60%;
    color: #999;
    font-size: 30rpx;
    margin-left: 20rpx;
}
.c-placeholder {
    color: #999;
}

.headerSearch .searchBtn {
    padding-left: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-left: 1rpx solid #999;
    color: #4C87FD;
    font-size: 30rpx;
}

.kzContent {
    width: 100%;
    height: calc(100% - 104rpx);
    display: flex;
    border-top: 4rpx solid #fff;
}
.kzContent .kzLeft {
    width: 30%;
    height: 100%;
    overflow-y: scroll;
    background-color: #fff;
    border-right: 1rpx solid rgb(247, 247, 247);
}

.kzContent .kzLeft .leftContent {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.kzContent .kzLeft .leftContent.y {
    background-color: rgb(247, 247, 247);
}



.kzContent .kzRight {
    width: 70%;
    height: 100%;
    overflow-y: scroll;
    background-color: #fff;
}

.kzContent .kzRight .rightContent {
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 2.5%;
    border-bottom: 1rpx solid #dbdbdb;
    padding-left: 20rpx;
}