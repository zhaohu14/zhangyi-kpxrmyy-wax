/* menzhen/reportDetail/reportDetail.wxss */
page {
  background-color: rgb(247, 247, 248);
}
.cardInfo {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.cardInfo .name {
  width: 60%;
  margin-left: 20rpx;
  width: calc(100% - 40rpx - 180rpx - 40rpx);
}

.cardInfo .qh {
  min-width: 40rpx;
  min-height: 30rpx;
  line-height: 30rpx;
  background-color: #4C87FD;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
}

.cardInfo image {
  width: 40rpx;
  height: 40rpx;
}

.reportInfo {
  width: 100%;
  min-height: 200rpx;
  /* border: 1rpx solid #dbdbdb; */
  background-color: #fff;
}

.reportInfo .info {
  width: 100%;
  min-height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  /* display: flex; */
}

.reportInfo .info view {
  /* width: 50%; */
}

.detail {
  width: 100%;
  min-height: 100rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.rows {
  width: 100%;
  min-height: 80rpx;
  display: flex;
  border-bottom: 1rpx solid #dbdbdb;
}

.rows .rowsDetail {
  min-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rows .title {
  width: 30%;
}

.rows .unit {
  width: 20%;
}

.rows .result {
  width: 20%;
}

.rows .ckfw {
  width: 30%;
}