/* menzhen/hospitalJS/hospitalJS.wxss */
page {
    background-color: rgb(247, 247, 247);
    /* padding: 30rpx 0; */
    padding-bottom: 30rpx;
}

.toHospitalHeader {
    width: 100%;
    height: 350rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30rpx;
}

.toHospitalHeader image {
    width: 90%;
    height: 320rpx;
}
.titles {
    width: 100%;
    margin-top: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    text-align: center;
    font-size: 34rpx;
    font-weight: 600;
}
.detail {
    width: 100%;
    /* padding: 20rpx 0; */
    padding-bottom: 20rpx;
    background-color: #fff;
}
.detail view {
    width: 95%;
    margin-left: 2.5%;
    line-height: 40rpx;
    font-size: 28rpx;
    text-indent: 2rem;
    color: #7e7e7e;
}