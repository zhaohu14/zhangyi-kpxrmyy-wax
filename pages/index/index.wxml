                <view class="titles">{{ item.title }}</view>
            </view>
        </view>
    </view>
  </van-tab>
  <van-tab title="体检服务">
    <view class="tabsView">
        <view class="tabsView">
            <view class="tabsView">
                <view wx:for="{{ tjList }}" class="funcBtnRows">
