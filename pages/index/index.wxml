<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="门诊服务">
    <view class="tabsView">
        <view wx:for="{{ mzList }}" class="funcBtnRows" bind:tap="toPage" data-item="{{ item }}" data-type="mz">
            <view class="icon"></view>
            <view class="titles">{{ item.title }}</view>
        </view>
    </view>
  </van-tab>
  <van-tab title="住院服务">
    <view class="tabsView">
        <view class="tabsView">
            <view wx:for="{{ zyList }}" class="funcBtnRows">
